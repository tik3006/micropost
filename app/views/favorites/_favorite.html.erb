<% if current_user.liked?(micropost) %>
  <%= form_with(model: micropost, local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
     <%= f.submit 'UnFavorite', class: 'btn btn-primary btn-sm' %>
   <% end %>
 <% else %>
   <%= form_with(model: current_user.microposts.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
     <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
   <% end %>
<% end %>
